<%= render "shared/header" %>
<div class='main'>

<%# ログイン中ユーザーのuser_check_id=1の時のみ表示 %>
<% if user_signed_in? && current_user.user_check_id == 1 %>
  <%= link_to(new_item_path, class: 'purchase-btn') do %>
    <span class='purchase-btn-text'>出品する</span>
  <% end %>
<% end %>
<%# ログイン中ユーザーのuser_check_id=1の時のみ表示 %>

  <%# 検索結果 %>
  <div class='item-contents'>
    <h2 class='title'>検索結果</h2>
    <ul class='item-lists'>
      <% if @items.length !=0 %>
        <% @items.each do |item| %>
          <li class='list'>
            <div class="item-talent">
              <%= link_to item.user.nickname, user_path(item.user.id), method: :get, class:"item-talent-name" %>
            </div>
            <%= link_to item_path(item.id), method: :get do %>
              <div class='item-img-content'>
                <%= image_tag item.image, class: "item-img" %>

                <% if item.order.present? %>
                  <div class='sold-out'>
                    <span>Sold Out!!</span>
                  </div>
                <% end %>
              </div>
            <% end %> 
            <div class="item-footer">
              <h3 class='item-name'>
                <%= item.name %>
              </h3>
              <div class="heart-click">
                <% if current_user.liked_by?(item) %>
                  <p class="heart-icon">
                    <%= link_to item_likes_path(item), method: :delete  do%>
                    <i class="fas fa-heart"></i>
                    <% end %>
                  </p>
                <%else%>
                  <p class="heart-icon">
                    <%= link_to item_likes_path(item), method: :post  do%>
                      <i class="far fa-heart"></i>
                    <% end %>
                  </p>
                <% end %>
                <%= item.likes.count%>
              </div>
            </div>
          </li>
        <% end %> 
      <% else %>
        <h3 class='item-name'>商品がありません。</h3>
      <% end %>
    </ul>
  </div>
  <%# /検索結果 %>
</div>

<%= render "shared/footer" %>