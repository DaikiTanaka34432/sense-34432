<%= render "shared/header" %>

<%# 商品の概要 %>
<div class="item-show">
  <div class="item-top-box">
    <div class="item-name-image">
      <h2 class="name">
        <%= @item.name %>
      </h2>
      <div class="item-img-content">
        <%= image_tag @item.image,class:"item-box-img" %>
        <%# 商品が売れている場合は、sold outを表示しましょう %>
        <% if @item == nil %>
          <div class="sold-out">
            <span>Sold Out!!</span>
          </div>
        <% end %>
        <%# //商品が売れている場合は、sold outを表示しましょう %>
      </div>
    </div>
    <div class="item-about">
      <li class="item-explain-box"><%= @item.profile %></li>
      <li class="item-explain-box"><%= @item.detail %></li>
    </div>
  </div>
  <div class="item-bottom-box">
      <div class="detail-table">
        <div class="details">
          <p class="detail-item">出品者</p>
          <p class="detail-value"><%= @item.user.nickname %></p>
        </div>
        <div class="details">
          <p class="detail-item">カテゴリー</p>
          <p class="detail-value"><%= @item.category.name %></p>
        </div>
        <div class="details">
          <p class="detail-item">発送元の地域</p>
          <p class="detail-value"><%= @item.prefecture.name %></p>
          </div>
        <div class="details">
          <p class="detail-item">発送日の目安</p>
          <p class="detail-value"><%= @item.shipment_days.name %></p>
        </div>
        <div class="details">
          <p class="detail-item">配送料</p>
          <p class="detail-value"><%= @item.delivery_fee.name %></p>
        </div>
        <div class="item-price-box">
          <span class="item-price">
            <p>¥<%= @item.fee %>円(税込)</p>
          </span>
        </div>
        <div class="option">
          <div class="favorite-btn">
            <%= image_tag "star.png" ,class:"favorite-star-icon" ,width:"18",height:"18"%>
            <span>お気に入り 0</span>
          </div>
        </div>
      </div>
      <div class="users-button">
        <% if @item.present? %>
          <% if current_user.id == @item.user_id%>
            <%= link_to "編集", edit_item_path, method: :get, class: "item-red-btn" %>
            <p class="or-text">or</p>
            <%= link_to "削除", item_path(@item.id), method: :delete, class:"item-destroy" %>
          <% end %>
          <%# 商品が売れていない場合はこちらを表示しましょう %>
          <% if user_signed_in? && current_user.id != @item.user_id %>
            <%= link_to "購入画面に進む", "#" ,class:"item-red-btn"%>
          <% end %>
          <%# //商品が売れていない場合はこちらを表示しましょう %>
        <% end %>
      </div>
   </div>
  <%# /商品の概要 %>

  <div class="comment-box">
    <form>
      <textarea class="comment-text"></textarea>
      <p class="comment-warn">
        相手のことを考え丁寧なコメントを心がけましょう。
        <br>
        不快な言葉遣いなどは利用制限や退会処分となることがあります。
      </p>
      <button type="submit" class="comment-btn">
        <%= image_tag "comment.png" ,class:"comment-flag-icon" ,width:"20",height:"25"%>
        <span>コメントする<span>
      </button>
    </form>
  </div>
  <%# 詳細ページで表示されている商品のカテゴリー名を表示しましょう %>
  <a href="#" class="another-item"><%= "商品のカテゴリー名" %>をもっと見る</a>
  <%# //詳細ページで表示されている商品のカテゴリー名を表示しましょう %>
</div>

<%= render "shared/footer" %>
